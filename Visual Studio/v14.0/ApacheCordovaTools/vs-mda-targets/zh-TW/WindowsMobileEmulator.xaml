<?xml version="1.0" encoding="utf-8"?>
<Rule Name="WindowsMobileEmulator" DisplayName="Windows Mobile 模擬器" PageTemplate="debugger" Description="Windows Mobile 模擬器偵錯工具選項" xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns="http://schemas.microsoft.com/build/2009/properties">
    <Rule.Metadata>
        <sys:Guid x:Key="DebugTargetTypeCommandGuid">FEEA6E9D-77D8-423F-9EDE-3970CBB76125</sys:Guid>
        <sys:UInt32 x:Key="DebugTargetTypeCommandId">0x400</sys:UInt32>
        <sys:String x:Key="DebugTargetDropdownEnum">WindowsMobileEmulatorID</sys:String>
    </Rule.Metadata>

    <Rule.DataSource>
        <DataSource Persistence="UserFile" HasConfigurationCondition="true"/>
    </Rule.DataSource>

    <Rule.Categories>
        <Category Name="StartOptions" DisplayName="起始選項" Description="起始選項"/>
    </Rule.Categories>

    <DynamicEnumProperty Name="WindowsMobileEmulatorID" DisplayName="對目標執行偵錯" EnumProvider="MDDWindowsPhoneEmulators" Description="指定偵錯時所要使用的模擬器。若未安裝任何模擬器，請使用偵錯目標下拉式清單中的 [下載模擬器 8.1...]。" F1Keyword="javascript.project.property.debugging.debuggertarget"/>

    <BoolProperty Name="AllowLocalNetworkLoopback" DisplayName="允許區域網路回送" F1Keyword="javascript.project.property.debugging.allowlocalnetworkloopback" Description="對 Windows 市集應用程式執行偵錯時，您可以使用本機服務、偵錯網路流量，以及透過區域回送，與同一部電腦上的元件進行通訊。">
    </BoolProperty>
</Rule>
